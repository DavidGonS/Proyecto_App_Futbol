<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    tools:context=".admin.jugadores.ModificarJugador">

    <TextView
        android:id="@+id/tvTituloModificarJugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginTop="40dp"
        android:text="@string/modificar_jugador"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="411dp"
        android:layout_height="513dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="25dp"
        android:padding="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloModificarJugador">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="32dp">

            <TextView
                android:id="@+id/tvIdJugadorModificarJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id_jugador"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etIdJugadorModificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvNombreModificarJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombreFormulario"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etNombreModificarJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvApellidoModificarJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apellido"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etApellidoModificarJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvFechaNacModificarJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fecha_nacimiento"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etFechaNacModificarJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvDorsalModificarJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dorsal"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDorsalModificarJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvNacionalidadModificarJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nacionalidad"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etNacionalidadModificarJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvPosicionModificarJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/posicion_formulario"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPosicionModificarJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvValorModificarJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/valor_mercado"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etValorModificarJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvIdEquipoModificarJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id_equipo"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etIdEquipoModificarJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btModificaJugador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#3F51B5"
                android:onClick="updatePlayer"
                android:text="@string/modificar" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/tvMensajeModificarJugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="179dp"
        android:layout_marginTop="37dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout3"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>