<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    tools:context=".MenuAdministrador">

    <Button
        android:id="@+id/btJugadoresAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="77dp"
        android:backgroundTint="#3F51B5"
        android:onClick="goToPlayers"
        android:text="Jugadores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloAdmin" />

    <Button
        android:id="@+id/btEquiposAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginTop="77dp"
        android:backgroundTint="#3F51B5"
        android:text="Equipos"
        app:layout_constraintStart_toEndOf="@+id/btJugadoresAdmin"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloAdmin" />

    <Button
        android:id="@+id/btLigasAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#3F51B5"
        android:onClick="goToLigas"
        android:text="Ligas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btJugadoresAdmin" />

    <TextView
        android:id="@+id/tvTituloAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="42dp"
        android:text="ADMINISTRACION"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>